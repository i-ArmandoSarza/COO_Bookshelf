<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
      android:id="@+id/backButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/back" />

    <ImageView
      android:id="@+id/detailImage"
      android:layout_width="match_parent"
      android:layout_height="400dp"
      android:layout_marginTop="12dp"
      android:contentDescription="@string/book_cover"
      android:scaleType="centerCrop" />
    <TextView
      android:id="@+id/detailTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="22sp"
      android:layout_marginTop="12dp"
      android:textStyle="bold" />


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/labelFor_detailAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="By:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

      <TextView
        android:id="@+id/detailAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/labelFor_bookPublishDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Published:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
      <TextView
        android:id="@+id/bookPublishDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/labelFor_bookIsbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
      <TextView
        android:id="@+id/bookIsbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    </LinearLayout>


      <TextView
        android:id="@+id/labelFor_bookDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:text="Description:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
      <TextView
        android:id="@+id/bookDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

  </LinearLayout>
</ScrollView>